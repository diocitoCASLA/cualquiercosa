//Pedir al usuario que ingrese dos números enteros. Sumarlos y mostrar por pantalla dicho resultad
Algoritmo ES_03
	Definir primerNumero Como Entero;
	Definir segundoNumero Como Entero;
	Definir total Como Entero;
	
	
	Escribir "Ingrese un número";
	Leer primerNumero;
	Escribir "Ingrese otro número";
	Leer segundoNumero;
	
	total <- primerNumero + segundoNumero;

	Mostrar "La suma de ambos números es: ", total;

FinAlgoritmo


