Algoritmo ES_05
	Definir base Como Entero;
	Definir perimetro Como Real;
	Definir superficie Como real;
	
	Mostrar "Ingrese la base del cuadrado";
	Leer base;
	
	perimetro <- base*4;
	superficie <- base^2;
	
	Mostrar "El perimetro del cuadrado es ", perimetro;
	Mostrar  " y la superfice es ", superficie;
	
FinAlgoritmo
